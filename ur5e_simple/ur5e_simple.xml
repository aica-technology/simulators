<!-- ./simulate ../../../.devcontainer/ur5e_simple/ur5e_simple.xml -->

<mujoco model="ur5e_simple">
  <compiler angle="radian" autolimits="true"/>
  <option integrator="implicitfast"/>

  <default>
    <default class="ur5e">
      <joint type="hinge" damping="1"/>
      <general gaintype="fixed" biastype="affine" ctrlrange="-6.2831 6.2831" gainprm="2000" biasprm="0 -2000 -400"
        forcerange="-150 150"/>
        <default class="size3">
          <default class="size3_limited">
            <joint range="-3.1415 3.1415"/>
            <general ctrlrange="-3.1415 3.1415"/>
          </default>
        </default>
        <default class="size1">
          <general gainprm="500" biasprm="0 -500 -100" forcerange="-28 28"/>
        </default>
    </default>
  </default>

  <worldbody>
    <light pos="0 0 3"/>
    <body name="base" pos="0 0 0" childclass="ur5e" quat="1 0 0 1">
      <geom type="box" size="0.05 0.05 0.02"/>
      <body name="shoulder_link" pos="0 0 0.02" zaxis="0 -1 0">
        <joint name="shoulder_pan_joint" class="size3" axis="0 1 0"/>
        <geom type="cylinder" size="0.01" fromto="0 0 0 0 0.14 0" />
        <body name="upper_arm_link" pos="0 0.14 0" zaxis="1 0 0"> 
          <joint name="shoulder_lift_joint" class="size3"  axis="0 1 0"/>
          <geom type="cylinder" size="0.01" fromto="0 0 0 0 0 0.2"/>
          <body name="forearm_link" pos="0 0 0.2" zaxis="0 0 1">
            <joint name="elbow_joint" class="size3_limited" axis="1 0 0"/>
            <geom type="cylinder" size="0.01" fromto="0 0 0 0.4 0 0"/>
          </body> 
        </body>
      </body>
    </body>
  </worldbody>
    
</mujoco>